<li>
  <%= gravatar_for user, :size => 30 %>
  <%= link_to user.name, user %>
  <% if current_user.admin? %>
      <% if current_user?(user) %>
        | <em>That's you!</em>
      <% else %>
        | <%= link_to "delete", user, :method => :delete, :confirm => "Are you sure?",
                                      :title => "Delete #{user.name}" %>
      <% end %>
  <% end %>

</li>